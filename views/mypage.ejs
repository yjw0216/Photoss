<script>
    function logout(){
        var reply = confirm('로그아웃 하시겠습니까?');
        if (reply == true) {
            sessionStorage.clear();
            window.location.href = "/";
        } else {
        }
    }

    //회원정보 수정
    function confirms(){
        var currentIp = location.host;
        var jwtToken = sessionStorage.getItem('jwtToken');

        $.ajax({
            url: "http://" + currentIp + "/getModify",
            type: 'POST',
            headers: {
                'x-access-token': jwtToken
            },
            data: {
                userId: $('#user_id').val(),
                userName: $('#user_name').val(),
                userEmail: $('#user_email').val(),
                userPass: $('#user_pass').val()
            },
            success: function(data){
                alert('회원정보가 변경되었습니다.');
            },
            error: function(e){
                alert(e);
            }
        })
    }

    //DB조회해서 input field에 회원정보 기입
    var jwtToken = sessionStorage.getItem('jwtToken');
    var currentIp = location.host;

    $.ajax({
        url: "http://" + currentIp + "/getUserInfo",
        type: "POST",
        headers: {
            'x-access-token': jwtToken
        },
        data: {},
        success: function(data){
            $('#user_account').val(data[0].account);
            $('#user_id').val(data[0].id);
            $('#user_name').val(data[0].name)
            $('#user_email').val(data[0].email);
            $('#user_pass').val(data[0].password);
        },
        error: function(e){
            alert(e);
        }
    })
</script>
